<p id="notice"><%= notice %></p>

<h1>Listing Ice Creams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ice_creams.each do |ice_cream| %>
      <tr>
        <td><%= ice_cream.name %></td>
        <td><%= ice_cream.description %></td>
        <td><%= ice_cream.picture %></td>
        <td><%= ice_cream.price %></td>
        <img src=ice_cream.picture />
        <td><%= link_to 'Show', ice_cream %></td>
        <td><%= link_to 'Edit', edit_ice_cream_path(ice_cream) %></td>
        <td><%= link_to 'Destroy', ice_cream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

